model User {
  id        Int    @id @default(autoincrement())
  name      String    @unique
  firstName String?
  lastName  String?
  password  String
  todos     Todo[]
}

model Todo {
     id           Int @id @default(autoincrement())
     title        String
     done         String
     description  String?
     userId       Int
     user         User  @relation(fields: [userId], references: [id])
}